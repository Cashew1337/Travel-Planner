<div class="profile">
  <div class="profilecard">
    <h2>My Profile</h2>
    <img src="assets/profilePicture.jpeg" id="profile-pic"/>
    <label id="profilelabel" for="input-file">Update Image</label>
    <input style="display:none" type="file" accept="image/jpeg, image/png, image/jpg" id="input-file"/>
  </div>
</div>

        <form id="input-area">

          <div class="input-wrapper">
            <label class="profile-input">First Name</label>
            <input value="{{firstname}}" required id="first_name" type="text" />
          </div>
          <div class="input-wrapper">
            <label class="profile-input">Last Name</label>
            <input value="{{lastname}}" required id="last_name"  type="text" />
          </div>
          <div class="input-wrapper">
            <label class="profile-input">Email</label>
            <input value="{{email}}" required id="email" type="text" />
          </div>
          <div class="input-wrapper">
            <label class="profile-input">Phone</label>
            <input value="{{phone}}" required id="phone"  type="text" />
          </div>

          <div class="input-wrapper address">
            <label class="profile-input">Address</label>
             <input value="{{address}}" required id="address" type="text"/>
          </div>

          <button class="btn btn-primary custom-btn" id="save-btn" type="submit">Save</button>
      
        </form>
      
</section>
        <script src="/js/profile-pic.js"></script>
