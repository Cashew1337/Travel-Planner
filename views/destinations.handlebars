{{#each destinations as |destination|}}
<div class="grid-container">
    <div class="box">
        <div class="card">
            <h2>{{name}}</h2>
            <a href="/destination/{{id}}">
            <img src="https://placebear.com/640/360" />
            </a>
        </div>
    </div>

    <div class="box-text">
        <h2>Upcoming Trips</h2>
    </div>

    {{#each trips as |trip|}}
    <div class="box">
        <div class="card">
            <p>{{trip.name}}</p>
            <a href="/trips/{{trip.id}}">
            <img src="https://placebear.com/640/360" />
            </a>
        </div>
        {{/each}}
        {{/each}}