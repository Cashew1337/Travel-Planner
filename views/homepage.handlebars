</h2></section>

<section class="upcoming">
    <h1>Upcoming Trips</h1>
    {{#each trips as |trip|}}
    {{log trip}}
    <h3>{{name}}</h3>
    <a href="./destination/{{trip.destinationId}}">
         <img src="{{trip.destination.imageUrl}}" alt="Destination image" style="width: 600px; height: 450px;">
    </a>
    {{/each}}
    
    </section>
   
